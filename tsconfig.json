{
  "compilerOptions": {
    "lib": ["es2022"],
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "strict": true,
    "skipLibCheck": true
  },
  "rootDir": "lib/",
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
